{
    "name": "balinomad/simple-config",
    "replace": {
        "navindex/simple-config": "self.version"
    },
    "type": "library",
    "description": "Simple library to create and modify a configuration structure.",
    "homepage": "https://github.com/balinomad/simple-config",
    "keywords": [
        "configuration",
        "config",
        "options",
        "PHP"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Miklos Karpati",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8.0",
        "phpunit/phpunit": "^9.5.16",
        "php-coveralls/php-coveralls": "^2.5",
        "symfony/var-dumper": "^5.4 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "BaliNomad\\SimpleConfig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BaliNomad\\SimpleConfig\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": "phpstan analyse",
        "test": "phpunit",
        "testonly": "phpunit --filter"
    },
    "scripts-descriptions": {
        "check": "Run static analysis",
        "test": "Run unit tests",
        "testonly": "Run a single test"
    }
}
