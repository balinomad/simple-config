{
    "name": "navindex/simple-config",
    "type": "library",
    "description": "Simple library to create and modify a configuration structure.",
    "homepage": "https://github.com/navindex/simple-config",
    "keywords": [
        "configuration",
        "config",
        "options",
        "Navindex",
        "PHP"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Miklos Karpati",
            "email": "mk@navindex.com.au",
            "homepage": "https://www.navindex.com.au",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2.0",
        "phpunit/phpunit": "^9.5.16",
        "php-coveralls/php-coveralls": "^2.5",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Navindex\\SimpleConfig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Navindex\\SimpleConfig\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": "phpstan analyse",
        "test": "phpunit",
        "testonly": "phpunit --filter"
    },
    "scripts-descriptions": {
        "check": "Run static analysis",
        "test": "Run unit tests",
        "testonly": "Run a single test"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/navindex"
        }
    ]
}
